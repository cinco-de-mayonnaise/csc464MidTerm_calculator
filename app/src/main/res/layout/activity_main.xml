                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="k"
                    android:textSize="42dp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
